<div class="row">
    <h4>Iniciar sesión</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-field col m12">
            <i class="material-icons prefix">mail_outline</i>
            <%= f.email_field :email, autofocus: true, placeholder:"Email",class:"col m10 offset-m1" %>
        </div>

        <div class="input-field col m12">
            <i class="material-icons prefix">fingerprint</i>
            <%= f.password_field :password, autocomplete: "off", placeholder:"Contraseña",class:"col m10 offset-m1" %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field-check_box col m8 offset-m9 ">
                <%= f.check_box :remember_me%>
                <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions col m12">
            <%= f.submit "Iniciar", class:"btn col m2 offset-m10" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
</div>