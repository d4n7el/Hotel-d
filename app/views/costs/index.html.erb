<div class="row">
	<div class="contenedor_costos">
		<div class="acciones col m12">
			<%= link_to new_cost_path, class:"waves-effect btn btn-floating right" do%>
				<i class="material-icons">add_circle</i>
			<% end %>
			<%= link_to costs_path, class:"waves-effect btn btn-floating right" do%>
				<i class="material-icons">youtube_searched_for</i>
			<% end %>
		</div>
		<% @costs.each do |c| %>
			<div class="col m4 listado_costos center">
				<h5 class="col m11"><%= c.type_service %></h5>
				<div class="accion col m1">
					<%= link_to edit_cost_path(c.id), class:"waves-effect btn btn-floating right" do%>
						<i class="material-icons">mode_edit</i>
					<% end %>
				</div>
				<div class="image col m12">
					<figure class="col m12">
						<%= cl_image_tag( c.get_cover_url, :width => 100, :height => 200, 
	             	 class:"activator") %>
					</figure>
					
				</div>
				<div class="info col m12">
					<h6><%= c.category %></h6>
					<h6>$ <%= c.value %></h6>
					<h6><%= c.description %></h6>
				</div>
			</div>
		<%end%>
	</div>
</div>